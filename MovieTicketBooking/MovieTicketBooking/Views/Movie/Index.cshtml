@model IEnumerable<Movie>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        @foreach (var Movie in Model)
        {
            string posterPath = "~/images/" + (Movie.PosterPath ?? "default-poster.jpg");
            <div class="col-3 mt-3 d-flex align-items-stretch">
                <a asp-controller="Movie" asp-action="Details" asp-route-id="@Movie.Id" class="card rounded-3 text-decoration-none">
                    <img src="@posterPath" class="img-fluid" style="height:27rem;width:50rem" asp-append-version="true">
                    <div class="text-dark text-center my-2">
                        @Movie.Title
                    </div>
                </a>
            </div>
        }
    </div>
</div>

